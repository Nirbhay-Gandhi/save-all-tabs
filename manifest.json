{
    "manifest_version": 3,
    "name": "Save All Tabs",
    "version": "1.0",
    "description": "Save all open tab URLs to a file",
    "permissions": [
        "tabs", 
        "downloads"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Save All Tabs"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }